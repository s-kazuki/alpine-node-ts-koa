{
  "name": "ts-koa-api",
  "version": "1.0.0",
  "description": "api by koa on node with typescript",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:watch": "rm -rf dist && tsc -w",
    "clean": "rm -rf node_modules coverage dist .nyc_output",
    "coverage": "nyc --exclude dist/test --reporter=html npm run test:all",
    "lint": "tslint 'src/**/*.ts' 'test/**/*.test.ts'",
    "start": "pm2 start dist/index.js --name koa",
    "start:dev": "tsc-watch --onSuccess 'node --inspect=0.0.0.0:5858 dist/index.js'",
    "test": "npm run build && mocha --exit --recursive dist/test/unit",
    "test:integration": "npm run build && mocha --exit --recursive dist/test/integration",
    "test:all": "npm run build && mocha --exit --recursive dist/test"
  },
  "author": "S-Kazuki<contact@revoneo.com>",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "koa": "^2.12.1",
    "koa-bodyparser": "^4.3.0",
    "koa-i18n": "^2.1.0",
    "koa-jwt": "^4.0.0",
    "koa-locale": "^1.3.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.2.11",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.13",
    "@types/sinon": "^9.0.4",
    "chai": "^4.2.0",
    "mocha": "^8.0.1",
    "mocha-sinon": "^2.1.2",
    "nyc": "^15.1.0",
    "pm2": "^4.4.0",
    "prettier": "^2.0.5",
    "tsc-watch": "^4.2.8",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^3.9.5"
  }
}
